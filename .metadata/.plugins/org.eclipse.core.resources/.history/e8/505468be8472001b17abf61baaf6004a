  <%@ include file="../include/nav.jsp" %>
  
  <main id="explore">
  
    <ul class="explore__users u-default-box">
    
      <c:forEach var="follow" items="${follows}" varStatus="status">
	      <li class="explore__user">
	        
	        <div class="explore__content">
	          <img src="/upload/${follow.follower.profileImage}" onerror="this.onerror=null; this.src='/images/avatar.jpg'"/>
	          <div class="explore__info">
	            <span class="explore__username">${follow.follower.username}</span>
	          </div>
	        </div>
	        
	        <div id="follow_item_${status.count}">
		        <c:if test="${principalId.vo.id ne follow.follower.id}">
			        <c:choose>
			        	<c:when test="${follow.followState eq true}">
			        		<button onClick="follow(false, ${follow.follower.id}, ${status.count})" class="following_btn">팔로잉</button>		
			        	</c:when>
			        	<c:otherwise>
			        		<button onClick="follow(true, ${follow.follower.id}, ${status.count})" class="follow_btn">팔로우</button>
			        	</c:otherwise>
			        </c:choose>
		        </c:if>
	        </div>
	        
	      </li>
      </c:forEach>
      
    </ul>
  </main>
  
  <%@ include file="../include/footer.jsp" %>
  
  <script>

//true -> unFollow , false -> Follow
//userId = id값(기본키)
//i=팔로우수
function follow(check,userId,i){
	var url = "/follow/${user.id}"; 
	if(check){
		//fetch의 url요청이 이루어진 후 then함수 실행됨 (then은 fetch요청을 하고 난 후 행동을 정의)
		fetch(url,{
			method: "POST"
		}).then(function(res){
			return res.text();
		}).then(function(res){
			if(res === "ok"){
				var follow_check = document.querySelector("#follow_item_"+i);
				console.log(follow_check);
				//innerHTML 선택된 요소의 내용을 변경
				follow_check.innerHTML="<button onClick='follow(false,"+userId+","+i+")' class='following_btn'>팔로잉</button>";
			}
		});
	}else{
		fetch(url,{
			method: "DELETE"
		}).then(function(res){
			return res.text();
		}).then(function(res){
			if(res === "ok"){
				var follow_check = document.querySelector("#follow_item_"+i);
				//innerHTML 선택된 요소의 내용을 변경
				follow_check.innerHTML="<button onClick='follow(true,"+userId+","+i+")' class='follow_btn'>팔로우</button>";
			
			}
		});
	}
}  
  </script>
